<script type="text/javascript"
	src="/deri-web/plug-in/js-irs/jquery-3.2.1.js"></script>
<script type="text/javascript">
    //mail reg
    var mailreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
    //由于方法相同，一下只写出相关的正则表达式

    //对于电话号码的验证
    var phone = /^1\d{10}$/;
    //非法字符
    var notFontReg = /[~#^$@%&!?%*]/gi;

    var accountNumReg = /^[0-9]*[1-9][0-9]*$/;

    var isAZReg = /[a-z]/i;

    var isAZNumReg = /^[0-9a-zA-Z]+$/;
    $(function() {
	initJS()
    })
    function subForm() {
	//$("#sendF").submit()
	$.ajax({
	    async : true,
	    cache : false,
	    type : 'POST',
	    url : "/deri-web/applyController.do?sendRequestForm",// 请求的action路径
	    data : $("#sendF").serialize() + "&ip=" + returnCitySN.cip,
	    error : function() {// 请求失败处理函数
	    },
	    success : function(data) {
		data = JSON.parse(data)
		showErrorMsg(data.obj)
	    }
	});
    }
    function initJS() {
	$("#company").change(function() {
	    if (!testCompany()) {
		$("#companyMsg").text("*格式不正确").css("color", "red")

	    } else {
		$("#companyMsg").text("*验证通过").css("color", "green")
	    }
	})
	$("#address").change(function() {
	    if (!testAddress()) {
		$("#addressMsg").text("*格式不正确").css("color", "red")

	    } else {
		$("#addressMsg").text("*验证通过").css("color", "green")
	    }
	})
	$("#adminAccount").change(
		function() {
		    if (testAdminAccount() == "验证通过") {
			$("#adminAccountMsg").text(testAdminAccount()).css(
				"color", "green")
		    } else {
			$("#adminAccountMsg").text(testAdminAccount()).css(
				"color", "red")
		    }

		})
	$("#realName").change(function() {
	    if (!testRealName()) {
		$("#realNameMsg").text("*格式不正确").css("color", "red")

	    } else {
		$("#realNameMsg").text("*验证通过").css("color", "green")
	    }
	})
	$("#telNum").change(
		function() {
		    if (!testTelNum()) {
			$("#telNumMsg").text("*手机号码格式不正确，请输入正确的手机号码").css(
				"color", "red")

		    } else {
			$("#telNumMsg").text("*验证通过").css("color", "green")
		    }
		})

	$("#accountNum").change(function() {
	    if (!testAccountNum()) {
		$("#accountNumMsg").text("*格式不正确,请输入正整数").css("color", "red")

	    } else {
		$("#accountNumMsg").text("*验证通过").css("color", "green")
	    }
	})
	$("#email").change(function() {
	    if (!testEmail()) {
		$("#emailMsg").text("*E_mail格式不正确").css("color", "red")

	    } else {
		$("#emailMsg").text("*验证通过").css("color", "green")
	    }
	})
    }
    function testEmail() {
	var email = $("#email").val();
	//对电子邮件的验证

	if (!email.match(mailreg)) {
	    $("#email").focus();
	    return false;
	} else {
	    return true;
	}
    }

    function testAccountNum() {
	var accountNum = $("#accountNum").val()

	if (!accountNum.match(accountNumReg)) {
	    $("#accountNum").focus();
	    return false;
	} else {
	    return true;
	}
    }
    function testRealName() {
	var realName = $("#realName").val()

	if (!realName.match(notFontReg)) {
	    $("#realName").focus();
	    return false;
	} else {
	    return true;
	}
    }
    function testTelNum() {
	var telNum = $("#telNum").val()

	if (!telNum.match(phone)) {
	    $("#telNum").focus();
	    return false;
	} else {
	    return true;
	}
    }
    function testAddress() {
	var address = $("#address").val()

	if (!address.match(notFontReg)) {
	    $("#address").focus();
	    return false;
	} else {
	    return true;
	}
    }
    function testCompany() {
	var company = $("#company").val()

	if (!company.match(notFontReg)) {
	    $("#company").focus();
	    return false;
	} else {
	    return true;
	}
    }
    function testAdminAccount() {
	var msg = "";
	var adminAccount = $("#adminAccount").val()
	var first = adminAccount.substring(0, 1)
	if (adminAccount.length >= 6) {
	    if (!first.match(isAZReg)) {
		$("#adminAccount").focus();
		msg = "请以字母开头，并且大于或等于6位"
		return msg;
	    } else {
		if (!adminAccount.match(isAZNumReg)) {
		    msg = "请输入字母和数字"
		    return msg;
		} else {
		    msg = "验证通过"
		    return msg;
		}
	    }
	} else {
	    msg = "请输入六位或六位以上字符"
	    return msg;
	}

    }
</script>

